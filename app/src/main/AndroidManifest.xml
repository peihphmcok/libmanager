            android:name=".controller.book.AddBookActivity"
            android:exported="false" />
        <activity
            android:name=".controller.book.BookDetailActivity"
            android:exported="false" />
        <activity
            android:name=".controller.auth.RegisterActivity"
            android:exported="false" /> <!-- Màn hình Home -->
        <activity
